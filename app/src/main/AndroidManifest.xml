<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="touqir.touqir_reflex" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReactionTimerActivity"
            android:label="@string/title_activity_reaction_timer"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="touqir.touqir_reflex.MainActivity" />
        </activity>
        <activity
            android:name=".GameShowBuzzer1"
            android:label="@string/title_activity_game_show_buzzer"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="touqir.touqir_reflex.MainActivity" />
        </activity>
        <activity
            android:name=".GameShowBuzzer2"
            android:label="@string/title_activity_game_show_buzzer2"
            android:parentActivityName=".GameShowBuzzer1" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="touqir.touqir_reflex.GameShowBuzzer1" />
        </activity>
        <activity
            android:name=".Statistics"
            android:label="@string/title_activity_statistics"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="touqir.touqir_reflex.MainActivity" />
        </activity>
        <activity
            android:name=".Dialog.EmailPage"
            android:label="@string/title_activity_email_page"
            android:parentActivityName=".Statistics" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="touqir.touqir_reflex.Statistics" />
        </activity>
    </application>

</manifest>
